@if (
TempData["SuccessMessage"] != null ||
TempData["ErrorMessage"] != null ||
TempData["InfoMessage"] != null ||
TempData["WarningMessage"] != null
)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var delay = 1500; // زمان تأخیر به میلی‌ثانیه

        @if (TempData["SuccessMessage"] != null)
        {
            <text>setTimeout(function() { ShowMessage('','@TempData["SuccessMessage"]', 'success') }, delay);</text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>setTimeout(function() { ShowMessage('','@TempData["ErrorMessage"]', 'error') }, delay);</text>
        }

        @if (TempData["WarningMessage"] != null)
        {
            <text>setTimeout(function() { ShowMessage('','@TempData["WarningMessage"]', 'warning') }, delay);</text>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <text>setTimeout(function() { ShowMessage('', '@TempData["InfoMessage"]', 'info') }, delay);</text>
        }
        });
    </script>
}
